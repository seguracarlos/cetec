			initStatus: 'Selecciona la fecha', isRTL: false
		};

		$.datepicker.setDefaults($.datepicker.regional['es']);

		$( "#fecha" ).datepicker({
		      changeMonth: true,
		      changeYear: true,
		     yearRange: '1970:2005',
		      minDate: new Date('1979/01/01'),
		})
		
		$( "#fechaCert" ).datepicker({
		      changeMonth: true,
		      changeYear: true,
		     yearRange: '1970:2005',
		      minDate: new Date('1979/01/01'),
		})
	
		$(document).ready(function() {
		    $(".numericInput").keypress(function (e) {
		        if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)){ 
		           return false;
		        }
		    });
		});

		$(document).on("click","#send",function(e) {
			var rfc = $("#rfcFact").val();
			var curp = $("#curp").val();
			var regexrfc = /^[A-Z]{4}\d{6}[a-zA-Z0-9]{3}$/;
			var regexCurp = "[A-Z]{1}[AEIOU]{1}[A-Z]{2}[0-9]{2}" +
							"(0[1-9]|1[0-2])(0[1-9]|1[0-9]|2[0-9]|3[0-1])" +
							"[HM]{1}" +
							"(AS|BC|BS|CC|CS|CH|CL|CM|DF|DG|GT|GR|HG|JC|MC|MN|MS|NT|NL|OC|PL|QT|QR|SP|SL|SR|TC|TS|TL|VZ|YN|ZS|NE)" +
							"[B-DF-HJ-NP-TV-Z]{3}" +
						 	"[0-9A-Z]{1}[0-9]{1}$";

			if(curp != ""){			 	
				if(!(curp.match(regexCurp))){
					e.preventDefault();
				    alertify.alert("El CURP ingresado no es valido");
					return false;
				}
			}
						 	
			if(rfc != ""){
			    if (!(rfc.match(regexrfc))) {
					e.preventDefault();
				    alertify.alert("El RFC ingresado no es valido");
				    return false;
			    }
			}
		});
				
	});	 
</script>